<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
       Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBlock Margin="10" FontSize="20" HorizontalAlignment="Center">Choose your cipher type:</TextBlock>
        <Button Margin="10" Height="50" Click="Button_Click">Caesar Cipher</Button>
        <Button Margin="10" Height="50" Click="Button_Click_1">Affine Cipher</Button>
        <Button Margin="10" Height="50" Click="Button_Click_2">Vigenere Cipher</Button>
    </StackPanel>
</Window>
